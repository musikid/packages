pkgname=flatbuffers
# https://github.com/google/flatbuffers/blob/master/CHANGELOG.md
pkgver=23.1.4
pkgrel=1
pkgdesc='An efficient cross platform serialization library for C++, with support for Java, C# and Go'
url='https://google.github.io/flatbuffers/'
source=("https://github.com/google/$pkgname/archive/v$pkgver/$pkgname-$pkgver.tar.gz")
sha256sums=('801871ff3747838c0dd9730fc44ca9cc453ff42f9c8a0a2f1b33776d2ca5e4b9')

prepare() {
  cd $pkgname-$pkgver
}

build() {
  cmake \
    -B build -S $pkgname-$pkgver \
    -DFLATBUFFERS_BUILD_TESTS=OFF \
    -DFLATBUFFERS_BUILD_FLATC=OFF \
    -DFLATBUFFERS_STRICT_MODE=ON \
    -DFLATBUFFERS_BUILD_FLATHASH=OFF \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_CXX_FLAGS='-DFLATBUFFERS_NO_ABSOLUTE_PATH_RESOLUTION' \
    -DCMAKE_TOOLCHAIN_FILE=$VITASDK/share/vita.toolchain.cmake \
    -DCMAKE_INSTALL_PREFIX=$prefix
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
